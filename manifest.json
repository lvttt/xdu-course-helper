{
  "manifest_version": 3,
  "name": "XDU Course Helper",
  "version": "1.0.0",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://yjsxk.xidian.edu.cn/*",
    "http://localhost/*",      
    "http://127.0.0.1/*"        
  ],
  "action": {
    "default_title": "打开选课助手"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://yjsxk.xidian.edu.cn/*"], 
      "js": ["src/content/index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://yjsxk.xidian.edu.cn/yjsxkapp/sys/xsxkapp/course.html",
                  "https://yjsxk.xidian.edu.cn/yjsxkapp/sys/xsxkapp/index.html"], 
      "js": ["src/content/early-hook.js"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  }
}